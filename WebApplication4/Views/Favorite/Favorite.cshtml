
@{
    ViewBag.Title = "Favorite";
}
<style>

    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    .favorites-container {
        width: 90%;
        margin: 20px auto;
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #d42e6d;
    }

    .favorite-item {
        display: flex;
        align-items: center;
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
    }

        .favorite-item:last-child {
            border-bottom: none;
        }

        .favorite-item img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 20px;
        }

    .favorite-details {
        flex-grow: 1;
    }

        .favorite-details h3 {
            margin: 0;
            font-size: 18px;
            color: #333;
        }

        .favorite-details p {
            font-size: 14px;
            color: #777;
            margin: 5px 0;
        }

    .price {
        font-size: 16px;
        color: #d42e6d;
        font-weight: bold;
    }

    button {
        background-color: #d42e6d;
        color: white;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        button:hover {
            background-color: white;
            color: #d42e6d;
            border: 2px solid #d42e6d;
        }



    .favorite-item img {
        margin: 0 auto 15px;
    }
    }
</style>
<h2>Favorite</h2>


<h2>Lista Favoritelor</h2>
<table>
    <tr>
        <th>Produs</th>
        <th>Descriere</th>
        <th>Preț</th>
        <th>Acțiuni</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width: 50px; height: 50px; border-radius: 8px;">
                @item.Product.Name
            </td>
            <td>@item.Product.Description</td>
            <td>@item.Product.Price mdl</td>
            <td>
                <form action="@Url.Action("AddToFavorites", "Favorite")" method="post">
                    <input type="hidden" name="id" value="@item.Product.Id" />
                    <button type="submit">Elimină</button>
                </form>
            </td>
        </tr>
    }
</table>

