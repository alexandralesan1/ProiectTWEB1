
@{
     ViewBag.Title = "Favorite";
}
<style>
     .favorites-wrapper {
          width: 100%;
          display: flex;
          flex-direction: column;
          align-items: center;
          background: linear-gradient(to right, #ffdcc5, #d2a8ff);
          padding: 20px;
     }

     .favorites-title {
          font-size: 24px;
          margin-bottom: 20px;
     }

     .favorites-container {
          display: flex;
          flex-wrap: wrap;
          gap: 30px;
          justify-content: center;
     }

     .favorite-card {
          width: 250px;
          background: white;
          border: 1px solid #ddd;
          border-radius: 10px;
          padding: 15px;
          text-align: center;
          box-shadow: 4px 4px 12px rgba(0, 0, 0, 0.15);
          transition: transform 0.3s ease, box-shadow 0.3s ease;
     }

          .favorite-card:hover {
               transform: scale(1.05); 
               box-shadow: 6px 6px 16px rgba(0, 0, 0, 0.2);
          }

     .favorite-img {
          width: 100%;
          height: 200px;
          object-fit: cover;
          border-radius: 10px;
     }

     .favorite-details h3 {
          font-size: 18px;
          margin: 15px 0;
     }

     .price {
          font-size: 16px;
          color: #333;
          font-weight: bold;
     }

     button {
          width: 100%;
          padding: 10px;
          margin-top: 8px;
          border: none;
          cursor: pointer;
          border-radius: 5px;
          transition: background 0.3s ease;
     }

     .btn-add {
          background-color: #ff4081;
          color: white;
     }

          .btn-add:hover {
               background-color: #d63369;
          }

     .btn-remove {
          background-color: #ff1744;
          color: white;
     }

          .btn-remove:hover {
               background-color: #d11538; 
          }
</style>


@using WebApplication4.Domain.Entities;
@model List<DBFavoriteItemsTable>


<div class="favorites-wrapper">
     <h2 class="favorites-title">Produsele Favorite</h2>

     <div class="favorites-container">
          @foreach (var item in Model)
          {
               <div class="favorite-card">
                    <img src="@item.Product.ImageUrl" class="favorite-img" alt="@item.Product.Name">
                    <div class="favorite-details">
                         <h3>@item.Product.Name</h3>
                         <p class="price">@item.Product.Price.ToString("N2") mdl</p>

                         <form action="@Url.Action("AddToCart", "Cart")" method="post">
                              <input type="hidden" name="id" value="@item.ProductId" />
                              <button type="submit" class="btn-add">Adaugă în Coș</button>
                         </form>

                         <form action="@Url.Action("RemoveFromFavorites", "Favorite")" method="post">
                              <input type="hidden" name="id" value="@item.ProductId" />
                              <button type="submit" class="btn-remove">Șterge</button>
                         </form>
                    </div>
               </div>
          }
     </div>
</div>
