@model WebApplication4.Domain.Entities.DBProductTable
@{
    ViewBag.Title = Model.Name;
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <title>@Model.Name</title>
    <link rel="stylesheet" href="~/Content/style.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f7f7f7;
        }

        .product-container {
            display: flex;
            flex-direction: column;
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            max-width: 600px;
            margin: auto;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .product-image img {
            width: 100%;
            max-height: 300px;
            object-fit: contain;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .product-title {
            font-size: 24px;
            margin-top: 15px;
        }

        .product-price {
            font-size: 20px;
            color: #d42e6d;
            margin: 10px 0;
        }

        .product-description {
            margin-top: 15px;
            line-height: 1.6;
        }

        .availability {
            font-size: 14px;
            color: green;
        }

        .add-to-cart {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }

        .add-to-cart input {
            width: 60px;
            padding: 5px;
        }

        .add-to-cart button {
            padding: 8px 15px;
            background-color: #d42e6d;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .add-to-cart button:hover {
            background-color: #b72055;
        }
    </style>
</head>
<body>

    <div class="product-container">
        <div class="product-image">
            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" />
        </div>

        <h1 class="product-title">@Model.Name</h1>

        <p class="product-price">@Model.Price RON</p>
        <p class="availability">
            @(Model.InStock ? "În stoc" : "Stoc epuizat")
        </p>

        <div class="add-to-cart">
            <input type="number" id="quantity" value="1" min="1" />
            <button onclick="addToCart()">Adaugă în coș</button>
        </div>

        <div class="product-description">
            <h3>Descriere produs</h3>
            <p>@Html.Raw(Model.Description)</p>
        </div>
    </div>

    <script>
        function addToCart() {
            let qty = document.getElementById("quantity").value;
            alert("Ai adăugat " + qty + " produs(e) în coș.");
        }
    </script>

</body>
</html>
