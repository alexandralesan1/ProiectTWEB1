
@{
     Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using WebApplication4.Domain.Entities
@model DBUserTable

<style>
body {
    font-family: 'Montserrat', sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 20px;
}

.profile-container {
    width: 60%;
    margin: auto;
    padding: 25px;
    background: white;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    text-align: center;
}

.profile-container h2 {
    color: #d42e6d;
    font-size: 24px;
    margin-bottom: 20px;
}

.profile-details {
    font-size: 18px;
    color: #333;
    background: #f3f3f3;
    padding: 15px;
    border-radius: 5px;
}

.admin-actions {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 20px;
}

     .btn-edit, .btn-logout {
          padding: 10px 15px;
          font-size: 16px;
          border: none;
          border-radius: 5px;
          cursor: pointer;
          text-decoration: none;
          transition: 0.3s ease;
     }

     .btn-edit {
          background: #b82e74;
          color: white;
     }

          .btn-edit:hover {
               background-color: white;
               color: black;
          }

     .btn-logout {
          background-color: #dc3545;
          color: white;
     }

          .btn-logout:hover {
               background-color: #c82333;
          }
</style>

<div class="profile-container">
     <h2>Profilul Administratorului</h2>

     <div class="profile-details">
          <p><strong>Nume:</strong> @Model.Name</p>
          <p><strong>Email:</strong> @Model.Email</p>
     </div>

     <div class="admin-actions">
          <a href="@Url.Action("EditAdminProfil", "Admin")" class="btn-edit">Editează Profilul</a>
          <a href="@Url.Action("Logout", "Login")" class="btn-logout">Deconectează-te</a>
     </div>
</div>
