
@{
     ViewBag.Title = "Profil";
}
@using WebApplication4.Domain.Entities
@model DBUserTable

<div class="profile-container">
     <h2>Bine ai revenit</h2>

     <div class="profile-details">
          <p><strong>Nume:</strong> @Model.Name</p>
          <p><strong>Email:</strong> @Model.Email</p>
          <p><strong>Telefon:</strong> @Model.Phone</p>
     </div>

     <div class="profile-actions">
          <a href="@Url.Action("EditProfile", "Profil")" class="btn-edit">Editează Profilul</a>
          <a href="@Url.Action("Logout", "Login")" class="btn-logout">Deconectează-te</a>
     </div>
</div>



<style>
     body {
          font-family: 'Montserrat', sans-serif;
          background-color: #f9f9f9;
          margin: 0;
          padding: 20px;
     }

     .profile-container {
          width: 50%;
          margin: auto;
          padding: 20px;
          background: #f8f8f8;
          box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
          border-radius: 8px;
          text-align: center;
     }

     .profile-details {
          font-size: 18px;
          color: #333;
     }

     .profile-actions {
          display: flex;
          gap: 15px;
          justify-content: center;
          margin-top: 20px;
     }

     .btn-edit, .btn-logout {
          padding: 10px 15px;
          font-size: 16px;
          border: none;
          border-radius: 5px;
          cursor: pointer;
          text-decoration: none;
          transition: 0.3s ease;
     }

     .btn-edit {
          background: #b82e74;
          color: white;
     }

          .btn-edit:hover {
               background-color: white;
               color:black;
          }

     .btn-logout {
          background-color: #dc3545;
          color: white;
     }

          .btn-logout:hover {
               background-color: #c82333;
         }
</style>