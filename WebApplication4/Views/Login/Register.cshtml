@{
    ViewBag.Title = "Register";
}
@using WebApplication4.Domain.Entities
@model IEnumerable<DBUserTable>

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cosmetic Shop</title>
    <link rel="stylesheet" href="~/Content/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
        }

        .gradientMove {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        .page-container {
            position: relative;
            height: 100vh;
            padding: 60px 20px 20px;
            box-sizing: border-box;
            background: linear-gradient(-45deg, #ffe0ec, #fbc2eb, #a18cd1, #fad0c4);
            background-size: 400% 400%;
            animation: gradientMove 10s ease infinite;
        }

        .page-title {
            text-align: center;
            margin-bottom: 20px;
            color: #5a2a4a;
            font-weight: 700;
            font-size: 36px;
        }

        .register-form {
            position: absolute;
            top: 150px;
            left: 50%;
            transform: translateX(-50%);
            background-color: white;
            padding: 30px 40px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            width: 400px;
            box-sizing: border-box;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #5a2a4a;
        }

        .form-input {
            width: 100%;
            padding: 10px 12px;
            font-size: 16px;
            border: 1.5px solid #ccc;
            border-radius: 6px;
            margin-bottom: 20px;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

            .form-input:focus {
                border-color: #d42e6d;
                outline: none;
            }

        .btn-submit {
            width: 100%;
            background-color: #d42e6d;
            color: white;
            font-weight: 700;
            font-size: 18px;
            padding: 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-submit:hover {
                background-color: #a72650;
            }

        .login-link {
            margin-top: 15px;
            font-size: 13px;
            display: block;
            text-align: center;
            text-decoration: underline;
            color: #5a2a4a;
        }

        .error-message {
            color: red;
            text-align: center;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="page-container">
        <h2 class="page-title">Înregistrare utilizator</h2>

        <form method="post" action="@Url.Action("Register", "Login")" class="register-form" enctype="multipart/form-data">
            <div class="form-group">
                <label class="form-label" for="name">Nume</label>
                <input type="text" id="name" name="name" class="form-input" required />
            </div>

            <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <input type="email" id="email" name="email" class="form-input" required />
            </div>

            <div class="form-group">
                <label class="form-label" for="password">Parola</label>
                <input type="password" id="password" name="password" class="form-input" required />
            </div>

            <div class="form-group">
                <label class="form-label" for="phone">Telefon</label>
                <input type="text" id="phone" name="phone" class="form-input" required />
            </div>

            <div class="error-message">@ViewBag.Error</div>

            <button type="submit" class="btn-submit">Trimite</button>

            <a href="@Url.Action("Login", "Login")" class="login-link">Ai deja un cont? Apasă aici pentru autentificare</a>

            <a href="@Url.Action("RegisterAdmin", "Login")" class="login-link">Înregsitrează-te ca administrator</a>
        </form>
    </div>
</body>
</html>
