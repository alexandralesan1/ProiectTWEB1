@{
    ViewBag.Title = "Login";
}
@using WebApplication4.Domain.Entities
@model IEnumerable<DBUserTable>

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Cosmetic Shop</title>
    <link rel="stylesheet" href="~/Content/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<style>

    body {
        font-family: 'Montserrat', sans-serif;
    }


    .contact-section {
        padding: 40px 20px;
        background-color: #f9f9f9;
    }

    .contact-header {
        text-align: center;
    }

        .contact-header h2 {
            margin-bottom: 20px;
        }

    .contact-form form {
        width: 50%;
        margin: 0 auto;
        background-color: white;
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .contact-form .form-group {
        margin-bottom: 20px;
    }

    .contact-form input, .contact-form textarea {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .contact-info {
        margin-top: 20px;
        text-align: center;
    }

    .contact-bar {
        background-color: black;
        color: white;
        font-size: 14px;
        padding: 8px 20px;
        display: flex;
        justify-content: flex-end;
        gap: 20px;
    }

        .contact-bar span {
            margin-left: 20px;
        }

    .contact:hover {
        color: #d42e6d;
    }

    .shiping:hover {
        color: #d42e6d;
    }

    .btn-submit {
        border: 2px solid #d42e6d;
        color: white;
        background-color: #d42e6d;
        border-radius: 5px;
    }



</style>
<body>
    <section class="contact-section">
        <div class="contact-header">
            <h2>Înregistrare utilizator</h2>
            <p>Completează formularul pentru a crea un cont sau a actualiza informațiile.</p>
        </div>
        <div class="contact-form">
            <form action="@Url.Action("Register", "Login")" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Nume</label>
                    <input type="text" id="name" name="name" required />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required />
                </div>
                <div class="form-group">
                    <label for="password">Parola</label>
                    <input type="password" id="password" name="password" required />
                </div>
                <div class="form-group">
                    <label for="phone">Telefon</label>
                    <input type="text" id="phone" name="phone" required />
                </div>
                <button type="submit" class="btn-submit">Trimite</button>
                <div style="color: red;">
                    @ViewBag.Error
                </div>
            </form>
        </div>
    </section>
   
</body>
</html>