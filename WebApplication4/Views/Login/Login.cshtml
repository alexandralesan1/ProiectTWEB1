@{
    ViewBag.Title = "Login";
}

<style>

    body {
        font-family: 'Montserrat', sans-serif;
    }

    .page-title {
        text-align: center;
        margin: 0 0 20px;
        color: #5a2a4a;
        font-weight: 700;
        font-size: 36px;
        position: relative;
        z-index: 2;
    }

    .contact-section {
        padding: 40px 20px;
        background: linear-gradient(-45deg, #ffe0ec, #fbc2eb, #a18cd1, #fad0c4);
        background-size: 400% 400%;
        animation: gradientMove 10s ease infinite;
    }

    .contact-form form {
        width: 400px; /* lățime fixă pentru formular */
        margin: 0 auto;
        background-color: white;
        padding: 20px 30px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        box-sizing: border-box; /* include padding și borduri în lățime */
    }

    /* Label-urile */
    label, .form-label {
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        color: #5a2a4a;
        display: block;
        margin-bottom: 8px;
    }

    /* Input-urile */
    input, .form-input {
        width: 100%;
        padding: 10px 12px;
        font-size: 16px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 500;
        color: #5a2a4a;
        border: 1.5px solid #ccc;
        border-radius: 6px;
        margin-bottom: 20px;
        box-sizing: border-box;
        transition: border-color 0.3s ease;
    }

        input:focus, .form-input:focus {
            border-color: #d42e6d;
            outline: none;
        }

    .btn-submit {
        border: 2px solid #d42e6d;
        color: white;
        background-color: #d42e6d;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, border-color 0.3s ease;
        padding: 12px;
        font-weight: 700;
        font-size: 18px;
        width: 100%;
    }

        .btn-submit:hover {
            background-color: #a72650;
            border-color: #a72650;
        }

    .gradientMove {
        0%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }
    }
</style>

<section class="contact-section">
    <div class="contact-header">
        <h2 class="page-title">Login</h2>
    </div>

    <div class="contact-form">
        @if (ViewBag.LoginError != null)
        {
            <p style="color: red;">@ViewBag.LoginError</p>
        }
        <form method="post" action="@Url.Action("Login", "Login")">
            <div class="form-group">
                <label class="form-label">Email:</label>
                <input type="email" name="Email" required class="form-input" />
            </div>
            <div class="form-group">
                <label class="form-label">Password:</label>
                <input type="password" name="Password" required class="form-input" />
            </div>
            <button type="submit" class="btn-submit">Login</button>
        </form>
        <p class="wishlist" style="font-size: 12px; text-align: center; display: block; text-decoration: underline;">
            Nu ai un cont <a href="@Url.Action("Register", "Login")">Registrează-te</a>
        </p>
    </div>
</section>
