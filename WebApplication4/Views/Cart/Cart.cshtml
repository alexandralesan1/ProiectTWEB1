@{
     ViewBag.Title = "Cart";
}

@using WebApplication4.Domain.Entities
@model List<DBCartItemsTable>

<style>
     body {
          font-family: 'Montserrat', sans-serif;
          background-color: #f9f9f9;
          margin: 0;
          padding: 0;
     }


     h2 {
          text-align: center;
          margin: 20px auto;
          color: #333;
     }

     table {
          width: 90%;
          margin: 20px auto;
          border-collapse: collapse;
          background-color: white;
          box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
          border-radius: 8px;
     }

          table th, table td {
               text-align: center;
               padding: 15px;
               border-bottom: 1px solid #ddd;
          }

          table th {
               background-color: #d42e6d;
               color: white;
               font-size: 16px;
               text-transform: uppercase;
          }

          table td {
               font-size: 14px;
               color: #333;
          }

          table tr:hover {
               background-color: #f2f2f2;
          }


     button {
          border: 2px solid #d42e6d;
          color: white;
          background-color: #d42e6d;
          padding: 8px 15px;
          font-size: 14px;
          cursor: pointer;
          border-radius: 5px;
          transition: 0.3s ease;
     }

          button:hover {
               background-color: white;
               color: #d42e6d;
               border: 2px solid #d42e6d;
          }


     table th, table td {
          font-size: 12px;
          padding: 10px;
     }

     h2 {
          font-size: 18px;
     }
     }
</style>




<h2>Coș de cumpărături</h2>

<table>
     <tr>
          <th>Produs</th>
          <th>Preț Unitar</th>
          <th>Cantitate</th>
          <th>Preț Total</th>
          <th>Acțiuni</th>
     </tr>
     @foreach (var item in Model)
     {
          <tr>
               <td>@item.Product.Name</td>
               <td>@item.Product.Price mdl</td>
               <td>@item.Quantity</td>
               <td>@item.FinalPrice mdl</td>
               <td>
                    <form action="@Url.Action("RemoveFromCart", "Cart")" method="post">
                         <input type="hidden" name="id" value="@item.Product.Id" />
                         <button type="submit">Șterge</button>
                    </form>
               </td>
          </tr>
     }

</table>
<h3>Total Price: @ViewBag.CartTotalPrice mdl</h3>
